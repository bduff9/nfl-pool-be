<mjml owa="desktop" version="4.6.3">
  <mj-head>
    <mj-title>New User Requires Admin Approval</mj-title>
    <mj-preview>{{{formatPreview 'A new user requires verification by an admin'}}}</mj-preview>
    {{> styles }}
    <mj-style inline="inline">
    </mj-style>
  </mj-head>
  <mj-body>
    {{> header }}
    <mj-section padding="0px" text-align="center">
      <mj-column width="100%" background-color="#fff" border-radius="10px">
        <mj-text css-class="untrustedUser" padding="30px 25px 15px 25px" font-size="17px" align="left" line-height="1.4">
          <p>Hello {{ admin.userFirstName }},</p>
          <p>A new user needs your approval:</p>
          <p>{{ newUser.userName }} just registered with email {{ newUser.userEmail }}.</p>
          <p>They claim to be referred by {{ newUser.userReferredByRaw }}.</p>
          <p>You can approve/remove them using the below link:</p>
        </mj-text>
        <mj-button align="center" background-color="#15803d" href="{{ domain }}/admin/users" border-radius="3px" border="0px solid #ffffff" color="#ffffff" font-weight="normal" inner-padding="13px 25px 13px 25px" padding="10px 50px 10px 50px" text-decoration="none" text-transform="none" vertical-align="middle" width="100%">
          <span style="font-size:16px;">Manage Users</span>
        </mj-button>
      </mj-column>
    </mj-section>
    {{> footer }}
  </mj-body>
</mjml>
